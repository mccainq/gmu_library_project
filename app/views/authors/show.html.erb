<%= image_tag @author.image_url, size: "155x100" %>

<p>
  <strong>Name:</strong>
  <%= @author.name %>
</p>

<p>
  <strong>DOB:</strong>
  <%= @author.dob %>
</p>

<p>
  <strong>Nationality:</strong>
  <%= @author.nationality %>
</p>
<% if !@author.awards.blank? %>
<p>
  <strong>Awards:</strong>
  <%= @author.awards %>
</p>
<% end %>
<p>
  <strong>Biography:</strong>
  <%= @author.biography %>
</p>
<br/>
<h1>Books</h1>
  <table>
  <tbody>
    <% @author.books.each do |bk| %>
      <tr>
        <td><%= link_to bk.title, bk %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<span style="float: left; margin-right: 10px;"><%= link_to 'Back', authors_path, :class => "btn btn-default" %></span>
<% if @current_user.admin %>
<span style="float: left; margin-right: 10px;"><%= link_to 'Edit', edit_author_path(@author), :class => "btn btn-default" %></span>
  <% if @author.books.count <  1 %>
    <span style="float: left; margin-right: 10px;"><%= button_to 'Delete', @author, :class => "btn btn-danger",
                   method: :delete,
                   data: { confirm: 'Are you sure?' } %></span>
  <% elsif @author.books.count > 0 %>
    <br/>
    <span style="float: left; margin-right: 10px;">Author has books and can't be deleted </span>
  <% end %>
<% end %>

