<div id="sidebar">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Things to do...</h3>
    </div>
    <div class="panel-body">
      <p>
        <%= link_to books_path, class: 'btn btn-default btn-block' do %>
          <span  style="float: left;" class="glyphicon glyphicon-list"></span>All Books
        <% end %>
      </p>
      <p>
        <%= link_to authors_path, class: 'btn btn-default btn-block' do %>
          <span  style="float: left;" class="glyphicon glyphicon-user"></span>Authors
        <% end %>
      </p>
      <p>
        <%= link_to reservations_index_path(@current_user), class: 'btn btn-default btn-block' do %>
          <span  style="float: left;" class="glyphicon glyphicon-tasks"></span>My Reservations
        <% end %>
      </p>
      <% if @current_user.admin %>
        <p>
          <%= link_to new_book_path, class: 'btn btn-default btn-block' do %>
            <span  style="float: left;" class="glyphicon glyphicon-asterisk"></span>New Book
          <% end %>
        </p>
        <p>
        <%= link_to new_author_path, class: 'btn btn-default btn-block' do %>
          <span  style="float: left;" class="glyphicon glyphicon-plus"></span>New Authors
        <% end %>
      </p>
        <p>
          <%= link_to books_overdue_path, class: 'btn btn-default btn-block' do %>
            <span  style="float: left;" class="glyphicon glyphicon-hourglass"></span>Overdue Books
          <% end %>
        </p>
      <% end %>
      <p>
        <%= link_to logout_path, method: "delete", class: 'btn btn-default btn-block' do %>
          <span  style="float: left;" class="glyphicon glyphicon-off"></span>Logout
        <% end %>
      </p>
    </div>
  </div>
</div>