<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="field">
  <%= f.label :isbn %><br>
  <%= f.text_field :isbn, class: "form-control" %>
</div>
<div class="field">
  <%= f.label :author %><br>
  <%= f.collection_select(:author_id, Author.all, :id, :name) %>
</div>
<div class="field">
  <%= f.label :genre %><br>
  <%= f.select :genre, Book::GENRES %>
</div>
  <div class="field">
    <%= f.label :abstract %><br>
    <%= f.text_area :abstract, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :pages %><br>
    <%= f.text_field :pages, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :published_on %><br>
    <%= f.date_select :published_on %>
  </div>
  <div class="field">
    <%= f.label :total_in_library %><br>
    <%= f.text_field :total_in_library, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :image_cover_url %><br>
    <%= f.text_area :image_cover_url, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
