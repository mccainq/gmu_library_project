<table>
  <tbody>
    <% @books.each do |bk| %>
      <tr>
        <td><%= image_tag bk.image_cover_url, size: "50x50" %> </td>
        <td><%= link_to bk.title, bk %> by <%= link_to bk.author.name, bk.author %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />

<div style="float: left"><%= page_entries_info @books %></div>
<div style="float: right"><%= paginate @books %></div>